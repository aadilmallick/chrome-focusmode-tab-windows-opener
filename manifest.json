{
  "manifest_version": 3,
  "name": "FocusMode - Tab Groups Opener",
  "version": "1.0.1",
  "action": {
    "default_popup": "index.html",
    "default_title": "FocusMode - Tab Groups Opener",
    "default_icon": {
      "16": "public/icon.png",
      "32": "public/icon.png",
      "48": "public/icon.png",
      "128": "public/icon.png"
    }
  },
  "icons": {
    "16": "public/icon.png",
    "32": "public/icon.png",
    "48": "public/icon.png",
    "128": "public/icon.png"
  },
  "permissions": ["storage", "tabGroups", "tabs"],
  "options_page": "src/options/options.html",
  "background": {
    "service_worker": "src/background/background.ts",
    "type": "module"
  },
  "description": "Collects tab groups and helps open them in a new window."
}
